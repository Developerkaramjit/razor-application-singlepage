@page
@model Razor_Application.Pages.BookList.CreateModel
@{
    <h2 class="h2 text-center">Create Book</h2>
    <form method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="container border">
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Name">Name</label>
                </div>
                <div class="col-6">
                    <input type="text" class="form-control" asp-for="Book.Name" />
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.Author">Author</label>
                </div>
                <div class="col-6">
                    <input type="text" class="form-control" asp-for="Book.Author" />
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Book.ISBN">ISBN</label>
                </div>
                <div class="col-6">
                    <input type="text" class="form-control" asp-for="Book.ISBN" />
                    <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button type="submit" class="btn btn-success form-control">Save</button>
                </div>
                <div class="col-3"><a asp-page="Index" class="btn btn-info form-control">Back to List</a></div>
            </div>
        </div>
    </form>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

}

